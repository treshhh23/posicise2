<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/btnPageHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeView2"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnCookie"
        android:layout_width="109dp"
        android:layout_height="124dp"
        android:onClick="increaseCookies"
        app:layout_constraintBottom_toBottomOf="@+id/btnPageHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_cookie_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click for Cookies"
        app:layout_constraintBottom_toTopOf="@+id/btnCookie"
        app:layout_constraintEnd_toEndOf="@+id/btnCookie"
        app:layout_constraintStart_toStartOf="@+id/btnCookie"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnGrandma"
        android:layout_width="142dp"
        android:layout_height="124dp"
        android:scaleType="fitCenter"
        android:onClick="increaseGrandmas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grandma_png_transparent" />

    <TextView
        android:id="@+id/txtGrandma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click for Grandmas"
        app:layout_constraintBottom_toTopOf="@+id/btnGrandma"
        app:layout_constraintEnd_toEndOf="@+id/btnGrandma"
        app:layout_constraintStart_toStartOf="@+id/btnGrandma"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>